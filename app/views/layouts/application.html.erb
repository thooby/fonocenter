<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application_nifty" %>
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
	<h1 class="white">Fonocenter</h1>
    <div id="container">
		<div id="user_nav">  
		  <% if current_user %>  
		    Conectado como <%= current_user.nombre %>  
		    <%= link_to "Â¿Desconectarse?", log_out_path %>
		<% end %>
		</div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
