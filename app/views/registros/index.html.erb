<% title "Lista de Registros" %>
<%= will_paginate @registros %>
<% if (current_user.nombre != "Fono") then %>
<h2>Registros de <%= current_user.nombre %></h2>
<%= link_to "Datos Personales", current_user %>
<% end %>
<table class="index">
  <tr>
	<% if (current_user.nombre=='Fono')  then %>
    <th>Operador</th>
    <% end %>
    <th>Fecha</th>
    <th>Turno</th>
    <th>Llamada</th>
    <th>Internet</th>
    <th>Impre </th>
    <th>Claro</th>
    <th>Movistar</th>
    <th>Lugar</th>
  </tr>
  <% for registro in @registros %>
    <% if (current_user.nombre=='Fono') or  (current_user.nombre==registro.user.nombre) then %>
    <tr>
	  <% if (current_user.nombre=='Fono')  then %>	
        <td><%= registro.user.nombre %></td>
      <% end %>
      <td><%= registro.fecha %></td>
      <td><%= registro.turno.descripcion[0,1] %></td>
      <td><%= registro.llamada %></td>
      <td><%= registro.ciber %></td>
      <td><%= registro.impresion %></td>
      <td><%= registro.claro %></td>
      <td><%= registro.movistar %></td>
      <td><%= registro.lugar.nombre %></td>
      <%= raw admin_reg(registro) %>
    </tr>
    <% end %>
  <% end %>
</table>

