<h1>Entrar</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :nombre %>
    <%= text_field_tag :nombre, params[:nombre] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Entrar" %></div>
<% end %>